<Window x:Class="Data_Analyzer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ScottPlot="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:HelixToolkit="clr-namespace:HelixToolkit.Wpf;assembly=HelixToolkit.Wpf"

        mc:Ignorable="d"
        Title="Data Analyzer"
        Width="1400" Height="900"
        WindowStartupLocation="CenterScreen">
    

    <DockPanel>
        <!-- Menu Bar (Top) -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Click="btnOpenFile_Click" Header="_Open..." />
                <MenuItem Header="_Save" />
                <Separator/>
                <MenuItem Header="E_xit" />
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="Reset Layout" />
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="About" />
            </MenuItem>
        </Menu>

        <!-- Status Bar (Bottom) -->
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem Content="Ready" />
            <StatusBarItem Content="|" />
            <StatusBarItem Content="User: Admin" />
        </StatusBar>

        <!-- Main Area -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <!-- Column 1 -->
                <ColumnDefinition Width="2*" />
                <!-- Column 2 -->
                <ColumnDefinition Width="6*" />
                <!-- Column 3 -->
            </Grid.ColumnDefinitions>

            <!-- Column 1 -->
            <Grid Grid.Column="0" Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>


                <!-- Vertical RangeSlider -->
                <xctk:RangeSlider
                    x:Name="FirstRangeSlider"
                    Orientation="Vertical"
                    Minimum="0" Maximum="10000"
                    LowerValue="0"
                    HigherValue="10000"
                    TickFrequency="5"
                    IsSnapToTickEnabled="True"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Center"
                    Width="40"
                    Margin="5"
                    Grid.Column="0"/>

                <!-- Plot -->
                <ScottPlot:WpfPlot x:Name="PlotLeft1" Grid.Column="1" Margin="5"/>
            </Grid>

            <!-- Column 2 -->
            <Grid Grid.Column="1" Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Vertical RangeSlider -->
                <xctk:RangeSlider
                    x:Name="SecondRangeSlider"
                    Orientation="Vertical"
                    Minimum="0" Maximum="10000"
                    LowerValue="0" HigherValue="10000"
                    TickFrequency="5"
                    IsSnapToTickEnabled="True"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Center"
                    Width="40"
                    Margin="5"
                    Grid.Column="0"/>

                <!-- Plot -->
                <ScottPlot:WpfPlot x:Name="PlotLeft2" Grid.Column="1" Margin="5"/>
            </Grid>

            <!-- Column 3 (Tabbed View) -->
            <TabControl x:Name="Tabs" Grid.Column="2" Margin="5" SelectionChanged="TabControl_SelectionChanged">
                <TabItem x:Name="Tab1" Header="Digraph">
                    <ScottPlot:WpfPlot x:Name="PlotTabA" />
                </TabItem>
                <TabItem x:Name="Tab2" Header="Histogram">
                    <ScottPlot:WpfPlot x:Name="PlotTabB" />
                </TabItem>
                <TabItem x:Name="Tab3" Header="Hilbert 2D">
                    <ScottPlot:WpfPlot x:Name="PlotTabD" />
                </TabItem>
                <TabItem x:Name="Tab4" Header="Hilbert 3D">
                    <Grid>
                        <HelixToolkit:HelixViewport3D x:Name="Viewport" ZoomExtentsWhenLoaded="True">
                            <!-- Remember to add light to the scene -->
                            <HelixToolkit:SunLight/>

                            
                            <HelixToolkit:PointsVisual3D x:Name="MyPoints"
                                 Size="3"
                                 Color="Red" />

                            <HelixToolkit:GridLinesVisual3D Width="8" Length="8" MinorDistance="1" MajorDistance="1" Thickness="0.01"/>
                        </HelixToolkit:HelixViewport3D>
                        
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>
    </DockPanel>
</Window>
