<Window x:Class="Data_Analyzer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ScottPlot="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="Data Analyzer"
        Width="1400" Height="900"
        WindowStartupLocation="CenterScreen">

    <DockPanel>
        <!-- Menu Bar (Top) -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Click="btnOpenFile_Click" Header="_Open..." />
                <MenuItem Header="_Save" />
                <Separator/>
                <MenuItem Header="E_xit" />
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="Reset Layout" />
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="About" />
            </MenuItem>
        </Menu>

        <!-- Status Bar (Bottom) -->
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem Content="Ready" />
            <StatusBarItem Content="|" />
            <StatusBarItem Content="User: Admin" />
        </StatusBar>

        <!-- Main Area -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <!-- Column 1 -->
                <ColumnDefinition Width="2*" />
                <!-- Column 2 -->
                <ColumnDefinition Width="6*" />
                <!-- Column 3 -->
            </Grid.ColumnDefinitions>

            <!-- Column 1 -->
            <Grid Grid.Column="0" Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Vertical RangeSlider -->
                <xctk:RangeSlider
                    Orientation="Vertical"
                    Minimum="0" Maximum="100"
                    LowerValue="20" HigherValue="80"
                    TickFrequency="5"
                    IsSnapToTickEnabled="True"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Center"
                    Width="40"
                    Margin="5"
                    Grid.Column="0"/>

                <!-- Plot -->
                <ScottPlot:WpfPlot x:Name="PlotLeft1" Grid.Column="1" Margin="5"/>
            </Grid>

            <!-- Column 2 -->
            <Grid Grid.Column="1" Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Vertical RangeSlider -->
                <xctk:RangeSlider
                    Orientation="Vertical"
                    Minimum="0" Maximum="100"
                    LowerValue="10" HigherValue="70"
                    TickFrequency="5"
                    IsSnapToTickEnabled="True"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Center"
                    Width="40"
                    Margin="5"
                    Grid.Column="0"/>

                <!-- Plot -->
                <ScottPlot:WpfPlot x:Name="PlotLeft2" Grid.Column="1" Margin="5"/>
            </Grid>

            <!-- Column 3 (Tabbed View) -->
            <TabControl Grid.Column="2" Margin="5">
                <TabItem Header="Plot A">
                    <ScottPlot:WpfPlot x:Name="PlotTabA" />
                </TabItem>
                <TabItem Header="Plot B">
                    <ScottPlot:WpfPlot x:Name="PlotTabB" />
                </TabItem>
                <TabItem Header="Plot C">
                    <ScottPlot:WpfPlot x:Name="PlotTabC" />
                </TabItem>
                <TabItem Header="Plot D">
                    <ScottPlot:WpfPlot x:Name="PlotTabD" />
                </TabItem>
            </TabControl>
        </Grid>
    </DockPanel>
</Window>
